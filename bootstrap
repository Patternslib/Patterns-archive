#!/bin/sh

cd "$(dirname "$0")"

mkdir -p bundles
npm install
node_modules/.bin/bungle update
node_modules/.bin/bungle install
./build.js -n
./build.js

cat > .git/hooks/post-checkout <<-'EOF'
	#!/bin/sh
	cd "$(dirname "$0")/../.."
        ./build.js -n
        ./build.js
EOF

chmod +x .git/hooks/post-checkout

echo "\n\n\n"
echo "Bootstraping done. Press ENTER to quit."
read
